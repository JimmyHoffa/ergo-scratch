{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "module": "es6",
        "moduleResolution": "node",
        "target": "es5",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "lib": ["es2020"],
        "typeRoots": ["node_modules/@types"],
        "paths": {"*": ["types/*"]},
        "baseUrl": "./"
    },
    "include": [
        "./src/index.ts"
    ]
}