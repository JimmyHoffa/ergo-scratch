{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "module": "CommonJS",
        "moduleResolution": "node",
        "declaration": true,
        "esModuleInterop": true,
        "target": "ESNext",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "lib": ["es2020"],
        "typeRoots": ["node_modules/@types"],
        "paths": {"*": ["types/*"]},
        "baseUrl": "./"
    },
    "include": [
        "./src/index.ts"
    ],
    "exclude": ["./node_modules", "./src/**/*.test.*"]
}